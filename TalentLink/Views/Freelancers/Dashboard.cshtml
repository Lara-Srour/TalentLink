@model TalentLink.Models.ViewModels.FreelancerDashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutFreelancer.cshtml";
    ViewData["Title"] = "Freelancer Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">👋 Welcome, @Model.FreelancerName!</h2>
        <a href="@Url.Action("FreelancerProfile", "Freelancers")" class="btn btn-outline-primary">
            <i class="bi bi-person-circle"></i> Edit Profile
        </a>
    </div>

    <!-- Recent Jobs Section -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-semibold">Recent Open Jobs</h3>
            <a href="@Url.Action("JobSearch", "Freelancers")" class="btn btn-warning">
                <i class="bi bi-search"></i> Discover More Jobs
            </a>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @if (!Model.RecentOpenJobs.Any())
            {
                <div class="col">
                    <div class="alert alert-info text-center">
                        No jobs available right now. Check back later or search for more opportunities.
                    </div>
                </div>
            }
            else
            {
                @foreach (var job in Model.RecentOpenJobs)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 rounded-3">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-primary fw-bold">@job.JobTitle</h5>
                                <p class="card-text text-muted flex-grow-1">
                                    @job.Description.Substring(0, Math.Min(job.Description.Length, 120))...
                                </p>
                                <p class="mb-1"><strong>💰 Budget:</strong> $@job.Salary</p>
                                <p class="text-muted"><i class="bi bi-calendar"></i> Posted on @job.DatePosted.ToShortDateString()</p>

                                <div class="d-flex gap-2 mt-auto">
                                    <a href="@Url.Action("JobDetails", "Jobs", new { id = job.Id })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                    <a href="@Url.Action("JobApply", "Applications", new { id = job.Id })"
                                       class="btn btn-success btn-sm">
                                        <i class="bi bi-send"></i> Apply
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
