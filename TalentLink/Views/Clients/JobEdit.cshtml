@model TalentLink.Models.Job

@{
    ViewData["Title"] = "Edit Job";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>Edit the Job Post</h2>

<form asp-action="JobEdit" asp-controller="Clients" method="post" asp-route-id="@Model.Id" id="editJobForm">
    <div class="form-group">
        <label asp-for="JobTitle" class="control-label"></label>
        <input asp-for="JobTitle" class="form-control"/>
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control"/>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobType" class="control-label"></label>
        <select asp-for="JobType" asp-items="Html.GetEnumSelectList<TalentLink.Models.JobType>()" class="form-control"></select>
        <span asp-validation-for="JobType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="control-label"></label>
        <input asp-for="Salary" class="form-control"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<TalentLink.Models.JobStatus>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- ClientId will be hidden (auto-detected from logged-in user later) -->
    <input type="hidden" asp-for="ClientId" value="@Model.ClientId" />
    <input type="hidden"  asp-for="Id" />

    <button type="button" class="btn btn-primary" id="saveChangesBtn">
        Save Changes
    </button>


<!-- Modal -->
<div class="modal fade" id="editModal-@Model.Id" tabindex="-1" aria-labelledby="editModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel-@Model.Id">Confirm Update</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to edit the job "<strong>@Model.JobTitle</strong>"?
            </div>
            <div class="modal-footer">
               <button type="submit" class="btn btn-danger">Apply</button>
               <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    document.getElementById("saveChangesBtn").addEventListener("click", function () {
        var form = document.getElementById("editJobForm");

        // Run built-in validation
        if ($(form).valid()) {
            // If valid -> show modal
            var modal = new bootstrap.Modal(document.getElementById("editModal-@Model.Id"));
            modal.show();
        } else {
            // Validation messages will show automatically
        }
    });
</script>

