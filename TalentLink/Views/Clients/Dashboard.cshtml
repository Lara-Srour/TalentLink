@model TalentLink.Models.ViewModels.ClientDashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Client Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">👋 Welcome back, @Model.ClientName!</h2>
        <a href="@Url.Action("ClientProfile", "Clients")" class="btn btn-outline-primary">
            <i class="bi bi-person-circle"></i> Edit Profile
        </a>
    </div>

    <!-- Stats Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-briefcase-fill text-primary" style="font-size:2rem;"></i>
                    <h5 class="mt-3">Jobs Posted This Month</h5>
                    <p class="display-6 fw-bold text-primary">@Model.JobsPostedThisMonth</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill text-success" style="font-size:2rem;"></i>
                    <h5 class="mt-3">New Applicants</h5>
                    <p class="display-6 fw-bold text-success">@Model.NewApplicantsThisMonth</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-person-lines-fill text-warning" style="font-size:2rem;"></i>
                    <h5 class="mt-3">Your Profile</h5>
                    <a href="@Url.Action("ClientProfile", "Clients")" class="btn btn-warning mt-3 w-100">
                        <i class="bi bi-pencil-square"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Jobs Section -->
    <div class="mb-4">
        <h3 class="fw-semibold mb-3">📌 Recent Open Jobs</h3>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @if (!Model.RecentOpenJobs.Any())
            {
                <div class="col">
                    <div class="alert alert-info text-center">
                        You haven't posted any jobs recently. <a href="@Url.Action("Create", "Clients")" class="alert-link">Post a new job now!</a>
                    </div>
                </div>
            }
            else
            {
                @foreach (var job in Model.RecentOpenJobs)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 rounded-3">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold text-primary">@job.JobTitle</h5>
                                <p class="card-text text-muted flex-grow-1">
                                    @job.Description.Substring(0, Math.Min(job.Description.Length, 120))...
                                </p>
                                <p class="mb-1"><strong>💰 Budget:</strong> $@job.Salary</p>
                                <p class="text-muted"><i class="bi bi-calendar"></i> Posted on @job.DatePosted.ToShortDateString()</p>

                                <a href="@Url.Action("JobDetails", "Clients", new { id = job.Id })"
                                   class="btn btn-outline-primary mt-auto">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
